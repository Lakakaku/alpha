{
  "extends": "@alpha/tsconfig/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@alpha/ui": ["../../packages/ui/src"],
      "@alpha/ui/*": ["../../packages/ui/src/*"],
      "@alpha/shared": ["../../packages/shared/src"],
      "@alpha/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "public/sw.js"
  ],
  "exclude": [
    "node_modules"
  ]
}