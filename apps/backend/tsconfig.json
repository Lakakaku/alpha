{
  "extends": "../../packages/tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strictFunctionTypes": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowJs": true,
    "checkJs": false,
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@vocilia/*": ["../../packages/*/src"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/server.ts", "src/app.ts", "src/config/**/*", "src/routes/**/*", "src/services/monitoring/**/*", "src/middleware/logging.ts", "src/health/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.*", "src/jobs", "src/models", "src/middleware/admin-*.ts", "src/middleware/ai-*.ts", "src/middleware/call-*.ts"]
}