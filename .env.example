# =============================================================================
# PROJECT ALPHA - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local and fill in the actual values
# NEVER commit .env.local to version control
# =============================================================================

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Get these values from: https://supabase.com/dashboard/project/wtdckfgdcryjvbllcajq/settings/api

# Public Supabase URL (safe to expose to client)
NEXT_PUBLIC_SUPABASE_URL=https://wtdckfgdcryjvbllcajq.supabase.co

# Public anon key (safe to expose to client, has limited permissions)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Service role key (SENSITIVE - server-side only, has admin permissions)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database connection string (for migrations and admin operations)
DATABASE_URL=postgresql://postgres:your_password@db.wtdckfgdcryjvbllcajq.supabase.co:5432/postgres

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
# Get your API key from: https://platform.openai.com/api-keys

# OpenAI API key for GPT-4o-mini integration
OPENAI_API_KEY=sk-your_openai_api_key_here

# OpenAI organization ID (optional)
OPENAI_ORG_ID=org-your_org_id_here

# Model configuration
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# =============================================================================
# SWISH PAYMENT CONFIGURATION
# =============================================================================
# Swedish mobile payment system integration
# Get credentials from: https://developer.swish.nu/

# Swish merchant ID
SWISH_MERCHANT_ID=your_swish_merchant_id_here

# Swish API environment (sandbox/production)
SWISH_ENVIRONMENT=sandbox

# Certificate paths for Swish API authentication
SWISH_CERTIFICATE_PATH=/path/to/swish_certificate.p12
SWISH_PRIVATE_KEY_PATH=/path/to/swish_private_key.pem
SWISH_CERTIFICATE_PASSWORD=your_certificate_password

# Swish API endpoints
SWISH_API_BASE_URL=https://mss.cpc.getswish.net/swish-cpcapi/api/v1
SWISH_CALLBACK_URL=https://yourdomain.com/api/webhooks/swish

# =============================================================================
# TELEPHONY PROVIDER CONFIGURATION
# =============================================================================
# For AI-powered phone calls (provider TBD)

# Telephony API credentials
TELEPHONY_API_KEY=your_telephony_api_key_here
TELEPHONY_API_SECRET=your_telephony_api_secret_here
TELEPHONY_ACCOUNT_SID=your_account_sid_here

# Webhook configuration
TELEPHONY_WEBHOOK_SECRET=your_webhook_secret_here
TELEPHONY_WEBHOOK_URL=https://yourdomain.com/api/webhooks/telephony

# Voice configuration
TELEPHONY_VOICE_LANGUAGE=sv-SE
TELEPHONY_VOICE_GENDER=female
TELEPHONY_VOICE_SPEED=normal

# =============================================================================
# APPLICATION URLS
# =============================================================================
# URLs for different applications in the monorepo

# Development URLs (local)
NEXT_PUBLIC_CUSTOMER_APP_URL=http://localhost:3000
NEXT_PUBLIC_BUSINESS_APP_URL=http://localhost:3001
NEXT_PUBLIC_ADMIN_APP_URL=http://localhost:3002
NEXT_PUBLIC_API_URL=http://localhost:4000

# Production URLs
NEXT_PUBLIC_MAIN_DOMAIN=vocilia.com
NEXT_PUBLIC_API_DOMAIN=api.vocilia.com

# Production Frontend URLs (Vercel)
# NEXT_PUBLIC_CUSTOMER_APP_URL=https://customer.vocilia.com
# NEXT_PUBLIC_BUSINESS_APP_URL=https://business.vocilia.com
# NEXT_PUBLIC_ADMIN_APP_URL=https://admin.vocilia.com

# Production Backend URL (Railway)
# NEXT_PUBLIC_API_URL=https://api.vocilia.com

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# JWT secret for additional token signing (if needed)
JWT_SECRET=your_super_secret_jwt_key_here

# Session configuration
SESSION_SECRET=your_session_secret_here
SESSION_TIMEOUT=86400

# CSRF protection
CSRF_SECRET=your_csrf_secret_here

# Encryption key for sensitive data
ENCRYPTION_KEY=your_32_character_encryption_key_here

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# For sending notifications and alerts

# SMTP configuration
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=noreply@vocilia.com

# Email service provider API (alternative to SMTP)
EMAIL_API_KEY=your_email_service_api_key_here

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Error tracking (e.g., Sentry)
SENTRY_DSN=https://your_sentry_dsn_here
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# Analytics (e.g., Posthog, Mixpanel)
ANALYTICS_API_KEY=your_analytics_api_key_here
ANALYTICS_PROJECT_ID=your_analytics_project_id_here

# Performance monitoring
PERFORMANCE_API_KEY=your_performance_monitoring_key_here

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================

# Webhook signing secrets for security
WEBHOOK_SECRET_SUPABASE=your_supabase_webhook_secret_here
WEBHOOK_SECRET_PAYMENT=your_payment_webhook_secret_here
WEBHOOK_SECRET_TELEPHONY=your_telephony_webhook_secret_here

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Environment mode
NODE_ENV=development

# Debug flags
DEBUG=true
DEBUG_SQL=false
DEBUG_API=false

# Test configuration
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/alpha_test
TEST_SUPABASE_URL=http://localhost:54321
TEST_SUPABASE_ANON_KEY=test_anon_key

# =============================================================================
# VERCEL DEPLOYMENT (FRONTEND)
# =============================================================================
# Configuration for Vercel deployment of Next.js applications

# Vercel project configuration
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here
VERCEL_TOKEN=your_vercel_token_here

# Build configuration for monorepo
VERCEL_BUILD_COMMAND=pnpm build
VERCEL_INSTALL_COMMAND=pnpm install
VERCEL_OUTPUT_DIRECTORY=.next

# Framework preset
FRAMEWORK=nextjs

# =============================================================================
# RAILWAY DEPLOYMENT (BACKEND)
# =============================================================================
# Configuration for Railway deployment of backend services

# Railway project configuration
RAILWAY_TOKEN=your_railway_token_here
RAILWAY_PROJECT_ID=your_railway_project_id_here
RAILWAY_ENVIRONMENT=production

# Deployment configuration
RAILWAY_DOCKERFILE_PATH=Dockerfile
RAILWAY_BUILD_COMMAND=pnpm build:backend
RAILWAY_START_COMMAND=pnpm start:backend

# Railway service configuration
PORT=4000
RAILWAY_STATIC_URL=https://your-service.railway.app
RAILWAY_PUBLIC_DOMAIN=api.vocilia.com

# =============================================================================
# RATE LIMITING
# =============================================================================

# Redis configuration for rate limiting (if using Redis)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# Rate limiting configuration
RATE_LIMIT_WINDOW=3600
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_MAX_REQUESTS_PER_IP=100

# =============================================================================
# FILE STORAGE
# =============================================================================

# File upload configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Storage provider (if using external storage)
STORAGE_PROVIDER=supabase
STORAGE_BUCKET=alpha-uploads
STORAGE_API_KEY=your_storage_api_key_here

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature toggles for development
FEATURE_AI_CALLS_ENABLED=true
FEATURE_PAYMENT_PROCESSING_ENABLED=false
FEATURE_ANALYTICS_ENABLED=true
FEATURE_ADVANCED_FRAUD_DETECTION=false

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# QR code generation service (if using external service)
QR_CODE_API_KEY=your_qr_code_api_key_here
QR_CODE_BASE_URL=https://api.qr-server.com/v1

# Translation service (for multi-language support)
TRANSLATION_API_KEY=your_translation_api_key_here

# SMS service (for notifications)
SMS_API_KEY=your_sms_api_key_here
SMS_FROM_NUMBER=+46XXXXXXXXX

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup configuration
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_here
BACKUP_STORAGE_URL=s3://your-backup-bucket/alpha
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# COMPLIANCE & AUDITING
# =============================================================================

# Audit logging
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90

# GDPR compliance
GDPR_DATA_RETENTION_DAYS=730
GDPR_DELETION_SCHEDULE=0 3 * * 0

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Claude Code integration
CLAUDE_API_KEY=your_claude_api_key_here

# Git configuration for automated commits
GIT_COMMIT_EMAIL=bot@vocilia.com
GIT_COMMIT_NAME=Vocilia Bot

