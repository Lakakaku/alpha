{
  "info": {
    "name": "Vocilia Authentication API",
    "description": "Shared authentication API for Vocilia applications",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://api.vocilia.se/v1",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authenticate user",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "auth",
            "login"
          ]
        },
        "description": "Authenticate user with email and password",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"securePassword123\"\n}"
        }
      }
    },
    {
      "name": "Sign out user",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/auth/logout",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "auth",
            "logout"
          ]
        },
        "description": "Invalidate user session and clear authentication tokens",
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{access_token}}",
              "type": "string"
            }
          ]
        }
      }
    },
    {
      "name": "Refresh authentication token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/auth/refresh",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "auth",
            "refresh"
          ]
        },
        "description": "Refresh expired access token using refresh token",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refresh_token\": \"refresh_token_value\"\n}"
        }
      }
    },
    {
      "name": "Get user profile",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/auth/profile",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "auth",
            "profile"
          ]
        },
        "description": "Retrieve current user's profile information",
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{access_token}}",
              "type": "string"
            }
          ]
        }
      }
    },
    {
      "name": "Update user profile",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/auth/profile",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "auth",
            "profile"
          ]
        },
        "description": "Update current user's profile information",
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{access_token}}",
              "type": "string"
            }
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"full_name\": \"John Doe\",\n  \"avatar_url\": \"https://example.com/avatar.jpg\"\n}"
        }
      }
    },
    {
      "name": "Get user permissions",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/auth/permissions",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "auth",
            "permissions"
          ]
        },
        "description": "Retrieve current user's permissions and roles",
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{access_token}}",
              "type": "string"
            }
          ]
        }
      }
    }
  ]
}