{
  "name": "@vocilia/shared",
  "version": "0.1.0",
  "private": true,
  "description": "Shared utilities and types for Project Alpha",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:ci": "jest --ci --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "@vocilia/types": "workspace:*"
  },
  "devDependencies": {
    "@vocilia/tsconfig": "workspace:*",
    "@types/jest": "^29.5.8",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "publishConfig": {
    "access": "restricted"
  }
}