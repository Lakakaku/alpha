{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "echo 'Using simple server - TypeScript build disabled temporarily'",
    "watchPatterns": ["apps/backend/server-simple.js", "apps/backend/package.json"]
  },
  "deploy": {
    "startCommand": "node apps/backend/server-simple.js",
    "numReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
